@model IEnumerable<DesafioFortes.MVC.ViewModels.ProdutoViewModel>

@if (Model.Count() > 0)
{

<table class="table" id="tabelaBanco">
    <thead>
        <tr>
            <th>
                Codigo
            </th>
            <th>
                Produto
            </th>
            <th>
                Valor
            </th>
            <th>
                Fornecedor
            </th>
            <th></th>
        </tr>
 </thead>
<tbody>
        @foreach (var item in Model)
        {
            <tr id="@item.ProdutoID">
                <td>
                    @Html.DisplayFor(modelItem => item.ProdutoID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fornecedor.RazaoSocial)
                </td>
                <td>
                    <input type="button" value="Remover Item" class="btn btn-default" onclick="RemoveItemPedido(item.ProdutoID)" />
                </td>
            </tr>
        }
        </tbody>
</table>
}
else
{
    <div>
        Não há produtos cadastrados
    </div>    
}
