@model IEnumerable<DesafioFortes.MVC.ViewModels.ProdutoViewModel>

@if (Model.Count() > 0)
{

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>       
        <th>
            Fornecedor
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>       
        <td>
            @Html.DisplayFor(modelItem => item.Fornecedor.RazaoSocial)
        </td>
        <td> 
            <input type="button" value="Remover Item" class="btn btn-default" onclick="RemoveItemPedido(item.ProdutoID)" />
        </td>
    </tr>
}

</table>
}
else
{
    <div>
        Não há produtos cadastrados
    </div>    
}
